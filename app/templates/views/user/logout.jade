extends ../../layouts/default

block intro
  .container
    //-h1 Login
    
block content
  .container
    .row: .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
      .jumbotron
        if user
          h3 You're logged in as #{user.name.full}
        else 
          form(method="post")
            input(type='hidden', name='action', value='login')
            .form-group
              label(for='email') Email
              input(type='email', name='email', id='email', value=formData.email).form-control
            .form-group
              label(for='password') Password
              input(type='password', name='password', id='password').form-control
            .form-actions
            button(type='submit').btn.btn-primary Login
