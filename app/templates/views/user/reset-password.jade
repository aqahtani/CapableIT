extends ../../layouts/auth

block content
      //- forgot-password form
      h3 Reset Your Password
      hr
      form(method='post', novalidate).form-horizontal
        input(type='hidden', name='action', value='reset-password')
        .form-group: .col-md-12
          label(for='password').sr-only New Password
          input(type='password', name='password', id='password', placeholder='New Password', tabindex=1).form-control
        .form-group: .col-md-12
          label(for='password_confirm').sr-only Confirm Password
          input(type='password', name='password_confirm', id='password_confirm', placeholder='Confirm Password', tabindex=2).form-control
        .form-group: .col-md-12
          button(type='submit', tabindex=3).btn.btn-primary.pull-right Change Password