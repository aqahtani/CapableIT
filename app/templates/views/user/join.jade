extends ../../layouts/auth

mixin step(step, current)
  .text-center
    if step == current
      h3: span.label.label-success= step
    else
      h3: span.label.label-default= step

block content
  //-.row
    .col-sm-6: +step(1, step)
    .col-sm-6: +step(2, step)
    
  case step
    when "1" 
      //- Step 1: Create User
      h3 Create your user account
      form(method='post').form-horizontal
        input(type='hidden', name='action', value='join')
        .form-group(class=validationErrors.name ? 'has-error' : null)
          label(for='name').col-sm-4.control-label Name
          .col-sm-8: input(type='text', name='name.full', id='name', value=formData['name.full']).form-control
        .form-group(class=validationErrors.email ? 'has-error' : null)
          label(for='email').col-sm-4.control-label Email
          .col-sm-8: input(type='email', name='email', id='email', value=formData.email).form-control
        .form-group(class=validationErrors.password ? 'has-error' : null)
          label(for='password').col-sm-4.control-label Password
          .col-sm-8: input(type='password', name='password', id='password', value=formData.password).form-control
          label(for='password_confirm').col-sm-4.control-label  Confirm Password
          .col-sm-8: input(type='password', name='password_confirm', id='password_confirm').form-control
        .form-group
          .col-sm-12: button(type='submit').btn.btn-lg.btn-primary.pull-right Join

    default
      h3 You now need to verify your email address