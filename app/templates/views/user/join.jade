extends ../../layouts/auth

mixin step(step, current)
  .text-center
    if step == current
      h3: span.label.label-success= step
    else
      h3: span.label.label-default= step

block content
  //-.row
    .col-sm-6: +step(1, step)
    .col-sm-6: +step(2, step)
    
  case step
    when "1" 
      //- Step 1: Create User
      h3 Join #{t("brand")}
      hr
      form(method='post')
        input(type='hidden', name='action', value='join')
        .form-group(class=validationErrors.name ? 'has-error' : null)
          label(for='name').control-label.sr-only Name
          input(type='text', name='name.full', id='name', value=formData['name.full'], placeholder='Full Name').form-control
        .form-group(class=validationErrors.email ? 'has-error' : null)
          label(for='email').control-label.sr-only Email
          input(type='email', name='email', id='email', value=formData.email, placeholder='Email').form-control
        .form-group(class=validationErrors.password ? 'has-error' : null)
          label(for='password').control-label.sr-only Password
          input(type='password', name='password', id='password', value=formData.password, placeholder='Password').form-control
        .form-group
          label(for='password_confirm').control-label.sr-only Confirm Password
          input(type='password', name='password_confirm', id='password_confirm', placeholder='Confirm Password').form-control
        .form-group
          button(type='submit').btn.btn-lg.btn-primary.pull-right Join
          br

    default
      h3 You now need to verify your email address