extends ../layouts/default
include ../mixins/job-brief
include ../mixins/paging
          
//-block intro
  .container
    header
      if !data.organization
        h2 Invalid Organization.
      else
        h2= data.organization.title
    hr

block content
  .container
    .row
      .col-sm-8
        //- show jobs
        if jobs.results.length
          section
            +showing(jobs, 'job')

            ul.list-group
              each job in jobs.results
                a(href='/job/' + job.id).list-group-item
                  +jobBrief(job)
          
            +pages(jobs)
        else
          h3.text-muted There are no jobs yet.