include form-mixins

//- Modal: New DevelopmentPlan Form
mixin modalNewDevelopmentPlan(modalId)
  .modal.fade(id="#{modalId}")
    .modal-dialog.modal-lg
      form(method="post", action="/developmentplans/new").modal-content
        input(type='hidden', name='action', value='create')
        .modal-header
          button(type="button", data-dismiss="modal").close
            span(aria-hidden="true") &times;
            span.sr-only Close
          h4.modal-title New Development Plan
        .modal-body
          //- 1: Development Plan Overview
          .row
            .col-sm-12
              .form-group
                label(for='period').col-sm-2.control-label  Target Period
                .col-sm-10: input(type='text', name='period', id='period', placeholder='YYYY').form-control
          hr
          .row
            .col-sm-12
              .panel.panel-default
                .panel-heading: h4 Professional Goals/Motivations
                .panel-body
                  .form-group
                    textarea(name='goals', id='goals', rows='3').form-control

          //- 2: Strengths and Weaknesses
          .row
            .col-sm-6
              .panel.panel-info
                .panel-heading: h4 Strengths and Talents to Use (3-5)
                .panel-body
                  .form-group
                    textarea(name='strengths', id='strengths', rows='3').form-control
            .col-sm-6
              .panel.panel-warning
                .panel-heading: h4 Weaknesses to Develop (3-5)
                .panel-body
                  .form-group
                    textarea(name='weaknesses', id='weaknesses', rows='3').form-control
          
        .modal-footer
          button(type='submit').btn.btn-info Create
          button(type="button", data-dismiss="modal").btn Cancel


//- Modal: Edit DevelopmentPlan Form
mixin modalEditDevelopmentPlan(modalId, developmentplan)
  .modal.fade(id="#{modalId}")
    .modal-dialog.modal-lg
      form(method='post').modal-content
        input(type='hidden', name='action', value='update')
        .modal-header
          button(type="button", data-dismiss="modal").close
            span(aria-hidden="true") &times;
            span.sr-only Close
          h4.modal-title Edit Development Plan
        .modal-body
          //- 1: Development Plan Overview
          .row
            .col-sm-12
              .form-group(class=validationErrors.period ? 'has-error' : null)
                label(for='period').col-sm-2.control-label  Target Period
                .col-sm-10: input(type='text', name='period', id='period', value=developmentplan.period, placeholder='YYYY').form-control
          hr
          .row
            .col-sm-12
              .panel.panel-default
                .panel-heading: h4 Professional Goals/Motivations
                .panel-body
                  .form-group(class=validationErrors.goals ? 'has-error' : null)
                    textarea(name='goals', id='goals', rows='3').form-control= developmentplan.goals
          
          //- 2: Strengths and Weaknesses
          .row
            .col-sm-6
              .panel.panel-info
                .panel-heading: h4 Strengths and Talents to Use (3-5)
                .panel-body
                  .form-group(class=validationErrors.strengths ? 'has-error' : null)
                    textarea(name='strengths', id='strengths', rows='3').form-control= developmentplan.strengths
            .col-sm-6
              .panel.panel-warning
                .panel-heading: h4 Weaknesses to Develop (3-5)
                .panel-body
                  .form-group(class=validationErrors.weaknesses ? 'has-error' : null)
                    textarea(name='weaknesses', id='weaknesses', rows='3').form-control= developmentplan.weaknesses
          
        .modal-footer
          //- status input HERE
          span.pull-left: +formSelectInput('status', statusOptions, developmentplan.status)
          button(type='submit').btn.btn-primary Submit
          button(type="button", data-dismiss="modal").btn.btn-danger Cancel

//- Modal: Delete DevelopmentPlan Form
mixin modalDeleteDevelopmentPlan(modalId, developmentplan)
  .modal.fade(id="#{modalId}")
    .modal-dialog
      form(method='post').modal-content
        input(type='hidden', name='action', value='delete')
        input(type='hidden', name='planId', value=developmentplan.id)
        .modal-header
          button(type="button", data-dismiss="modal").close
            span(aria-hidden="true") &times;
            span.sr-only Close
          h4.modal-title Delete Development Plan
        .modal-body
          p Are you sure you want to delete this plan?

          dl.dl-horizontal
            dt Period
            dd= developmentplan.period
            dt Created At
            dd=developmentplan._.createdAt.format('YYYY-MM-DD')
          
        .modal-footer
          button(type='submit').btn.btn-danger Delete
          button(type="button", data-dismiss="modal").btn Cancel