mixin flag-prime(prime)
  span.bs-component
    if prime
      button(
        type="button"
        data-container="body"
        data-toggle="popover" 
        data-trigger="focus"
        data-placement="bottom"
        data-content="This is a prime assessment which is taken for skill gap analysis"
        tabindex="0").btn.btn-info: span.glyphicon.glyphicon-plus 
    else
      button(
        type="button"
        data-container="body"
        data-toggle="popover" 
        data-trigger="focus"
        data-placement="bottom"
        data-content="This is not a prime assessment which means it won't be taken for skill gap analysis"
        tabindex="0").btn.btn-warning: span.glyphicon.glyphicon-minus

mixin flag-analyzed(analyzed)
  span.bs-component
    if analyzed
      button(
        type="button"    
        data-container="body"
        data-toggle="popover" 
        data-trigger="focus"
        data-placement="bottom"
        data-content="This assessment has already been taken for skill gap analysis"
        tabindex="0").btn.btn-success: span.glyphicon.glyphicon-eye-open
    else
      button(
        type="button"    
        data-container="body"
        data-toggle="popover" 
        data-trigger="focus"
        data-placement="bottom"
        data-content="This assessment has not yet been taken for skill gap analysis"
        tabindex="0").btn.btn-danger: span.glyphicon.glyphicon-eye-close

mixin flag-completed(completed)
  if completed
    span.glyphicon.glyphicon-ok
  else
    span.glyphicon.glyphicon-unchecked

mixin flag-approved(approved, approvedBy)
  if approved
    .label.label-success 
      | Approved by 
      each approval in approvedBy 
        span #{approval.name.full};  
  else
    .label.label-warning Unapproved

mixin flag-status(status)
  case status
    when 'draft'
      - var kind = 'label-warning'
    when 'final'
      - var kind = 'label-success'
    when 'archived'
      - var kind = 'label-danger'
    default
      - var kind = ''
  .label(class=kind)= status